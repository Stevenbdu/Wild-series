{% extends 'base.html.twig' %}
{% block body %}
    <h1>{{ program.title }} Saison {{ season.nbseason }}</h1>
        <p>Episode {{ episode.number }} : {{ episode.title }}</p>
    <p>{{ episode.synopsis }}</p>
    <a href="{{ path('wild_showProgram', {'slug':program.title|replace({' ':'-'}) |lower})}}"><button class="btn btn-dark">
        Retour à la série
        </button></a>
    <a href="{{ path('show_season', {'id':season.id})}}"><button class="btn btn-dark">
        Retour à la saison
        </button></a>
    <h2>Les commentaires</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Utilisateur</th>
            <th>Note</th>
            <th>Commentaire</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in episode.comments %}
            <tr>
                <td>{{ comment.author.email }}</td>
                <td>{{ comment.rate }}</td>
                <td>{{ comment.comment }}</td>
                {% if is_granted('ROLE_USER') %}
                    {% if  (app.user.email == comment.author.email) or (is_granted('ROLE_ADMIN'))  %}
                <td>{% include 'wild/delete_comment.html.twig' %}</td>
                        {% endif %}
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        <h3>Ajouter un commentaire</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">{{ button_label|default('Créer') }}</button>
        {{ form_end(form) }}
    {% else %}
        <h4>Veuillez-vous <a href="{{ path('app_login') }}">connecter</a> pour pouvoir écrire un commentaire</h4>

    {% endif %}
{% endblock %}
