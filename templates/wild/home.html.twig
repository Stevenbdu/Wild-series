{% extends 'base.html.twig' %}
{% block body %}
    <h1>Bienvenue sur Wild Series</h1>
    <a href="{{ path('wild_showProgram', { 'slug': "walking-dead" }) }}">
        <button class="btn btn-danger">
            TWD
        </button>
    </a>
    <p>
        Les catégories sont :
        {% for category in categories %}
            {{ category.name }}
        {% endfor %}
    </p>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_index') }}">
            Admin Série
        </a>
        <a href="{{ path('season_index') }}">
            Admin Saison
        </a>
        <a href="{{ path('episode_index') }}">
            Admin Episode
        </a>
        <a href="{{ path('category') }}">
            <button class="btn btn-dark">Ajouter une catégorie</button>
        </a>

    {% endif %}
    <p>Nos derniers ajouts :</p>
    <ul>
        {% for program in programs %}
            <li>{{ program.title }}</li>
        {% endfor %}
    </ul>

{% endblock %}
