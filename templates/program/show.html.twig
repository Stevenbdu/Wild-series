{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Série</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ program.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ program.title }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ program.summary }}</td>
        </tr>
        <tr>
            <th>Poster</th>
            <td>{{ program.poster }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('app_index') }}">
        <button class="btn btn-dark">Retour à l'accueil</button>
    </a>

    <a href="{{ path('program_index') }}">
        <button class="btn btn-dark">Retour aux séries</button>
    </a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">
        <button class="btn btn-primary">Modifier</button>
    </a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
