{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <div>
                    <a href="{{ path('show_season', { 'id' : season.id }) }}
">Saison : {{ season.nbseason }} </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('app_index') }}"><button class="btn btn-dark">Retour à l'accueil</button></a>

    <a href="{{ path('program_index') }}"><button class="btn btn-dark">Retour aux séries</button></a>

    <a href="{{ path('program_edit', {'id': program.id}) }}"><button class="btn btn-primary">Modifier</button></a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
