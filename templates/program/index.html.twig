{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Toutes les séries </h1>
    <div class="container-fluid row align-items-center">
        {% for program in programs %}
            <div class="col-lg-3 offset-1 align-item-center">
                <a href="{{ path('program_show', {'id':program.id}) }}">
                    <img src="{{ program.poster }}" class="poster_serie"></a>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('app_index') }}"><button class="btn btn-dark">Retour à l'accueil</button></a>

    <a href="{{ path('program_new') }}"><button class="btn btn-danger">Créer une série</button></a>
{% endblock %}
