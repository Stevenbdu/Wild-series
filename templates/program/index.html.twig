{% extends 'base.html.twig' %}

{% block title %}Série{% endblock %}

{% block body %}

    <div class="container-fluid">
<h1>Toutes les séries</h1>

    <div class="row">
        <a href="{{ path('app_index') }}">
            <button class="btn btn-dark">Retour à l'accueil</button>
        </a>
        <div class="offset-9">
        <a href="{{ path('program_new') }}">
            <button class="btn btn-danger">Créer une série</button>
        </a>
    </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Poster</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}"><button class="btn btn-primary">Afficher</button></a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}"><button class="btn btn-dark">Modifier</button></a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
